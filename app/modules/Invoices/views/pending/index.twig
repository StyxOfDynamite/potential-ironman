{% extends 'user/home.twig' %}
{% block content %}
<div class="row page-header-box">
    <div class="col-xs-10">
        <h3>{{ title }}</h3>
    </div>
</div>
 {% if flash.message %}
    <div class="alert alert-danger alert-dismissable" style="margin-top: 25px">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
        {{ flash.message }}
    </div>
{% endif %}
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-center">Client Email</th>
                        <th class="text-center">Due Date</th>
                    </tr>
                </thead>
                <tbody id="invoice-table">
                    {% for invoice in invoices %}
                    <tr id="invoice-row-{{ invoice.id }}">
                        <td class="text-center">{{ invoice.id }}</td>
                        <td class="text-center">{{ invoice.clientEmail }}</td>
                        <td class="text-center">{{ invoice.dueDate }}</td>
                        <td class="text-center">
                            <a id="reminder" data-id="{{ invoice.id }}" class="btn btn-xs btn-warning btn-send-reminder" href="{{ urlFor('send-invoice-reminder', {"id": invoice.id}) }}"><i class="fa fa-fw fa-lg fa-envelope"></i>Send Reminder</a>
                        </td>
                        <td class="text-center">
                            <a id="paid" data-id="{{ invoice.id }}" class="btn btn-xs btn-success btn-invoice-paid" href="{{ urlFor('mark-invoice-paid', {"id": invoice.id}) }}">
                                <i class="fa fa-fw fa-lg fa-money"></i>
                                Paid
                            </a>
                        </td>

                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="invoice-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modal-title">invoice Form</h4>
            </div>
            <div class="modal-body">
                {% include '@usergroup/user/form.twig' %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success btn-sm" id="btn-invoice-save" data-method="">Save</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}