{% extends 'user/home.twig' %}

{% block content %}
 {% if flash.message %}
    <div class="alert alert-danger alert-dismissable" style="margin-top: 25px">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
        {{ flash.message }}
    </div>
{% endif %}
<div class="container">
    <form role="form" class="form-horizontal" id="user-form-data" method="post" action="{{siteUrl('invoices/new')}}">

        <!-- Client Details -->
        <div class="form-group">
            <label for="email" class="col-lg-2 control-label">Client Email</label>
            <div class="col-lg-3">
                <input type="text" class="input-sm form-control validate[required]" name="email" id="email">
            </div>
            <label for="bcc" class="col-lg-2 control-label">Bcc yourself?</label>
            <div class="col-lg-3">
                <input type="checkbox" class="input-sm form-control" name="bcc"/>
            </div>
        </div>
        <div class="form-group">
            <label for="client_name" class="col-lg-2 control-label">Client Name</label>
            <div class="col-lg-3">
                <input type="text" class="input-sm form-control validate[required]" name="client_name" id="client_name">
            </div>
        </div>
        <div class="form-group">
            <label for="clientAddress1" class="col-lg-2 control-label">House Name / Number</label>
            <div class="col-lg-3">
                <input type="text" class="input-sm form-control validate[required]" name="clientAddress1" id="clientAddress1">
            </div>
            <label for="clientAddress2" class="col-lg-2 control-label">Street</label>
            <div class="col-lg-3">
                <input type="text" class="input-sm form-control validate[required]" name="clientAddress2" id="clientAddress2">
            </div>
        </div>
        <div class="form-group">
            <label for="clientAddress3" class="col-lg-2 control-label">Town / City</label>
            <div class="col-lg-3">
                <input type="text" class="input-sm form-control validate[required]" name="clientAddress3" id="clientAddress3">
            </div>
            <label for="clientAddress4" class="col-lg-2 control-label">Post Code</label>
            <div class="col-lg-3">
                <input type="text" class="input-sm form-control validate[required]" name="clientAddress4" id="clientAddress4">
            </div>
        </div>

        <!-- Invoice Details -->

        <div class="form-group">
            <label for="due_date" class="col-lg-2 control-label">Due Date</label>
            <div class="col-lg-3">
                <input type="text" class="input-sm form-control validate[required]" name="due_date" id="due_date">
            </div>
        </div>
        <div class="form-group">
            <label for="invoice-message" class="col-lg-2 control-label">Invoice Message</label>
            <div class="col-lg-8">
                <textarea rows="5" class="input-sm form-control validate[required]" name="invoice-message" id="invoice-message"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="email-message" class="col-lg-2 control-label">Email Message</label>
            <div class="col-lg-8">
                <textarea rows="5" class="input-sm form-control validate[required]" name="email-message" id="email-message"></textarea>
            </div>
        </div>
        <div class="input-row">
            <div class="form-group">
                <label for="item_name" class="col-lg-2 control-label">Item:</label>
                <div class="col-lg-2">
                    <input type="text" class="input-sm form-control validate[required]" name="item_name[]" placeholder="Name">
                </div>
                <div class="col-lg-2">
                    <input type="text" class="input-sm form-control validate[required]" name="item_qty[]" placeholder="Quantity">
                </div>
                <div class="col-lg-2">
                    <input type="text" class="input-sm form-control validate[required]" name="item_price[]" placeholder="Price">
                </div>
                <div class="col-lg-2">
                    <input type="text" class="input-sm form-control validate[required]" name="item_total[]" placeholder="Total" readonly="true">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-2">
                <!-- spacer -->
            </div>
            <div class="col-lg-2">
                <a id="add-item" class="btn btn-xs btn-success" href="#">Add additional item...</a>
            </div>
            <div class="col-lg-2">
                <a id="remove-item" class="btn btn-xs btn-warning" href="#">Remove last item...</a>
            </div>
        </div>
        <div class="form-group">
            <label for="total" class="col-lg-2 control-label">Total</label>
            <div class="col-lg-3">
                <input type="text" class="input-sm form-control validate[required]" name="total" id="total" placeholder="Invoice Total" readonly="true">
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-2">
                <!-- spacer -->
            </div>
            <div class="col-lg-2 text-center">
                <button type="submit" class="btn btn-md btn-success btn-block">Create</button>
            </div>

        </div>
    </form>
</div>
{% endblock %}